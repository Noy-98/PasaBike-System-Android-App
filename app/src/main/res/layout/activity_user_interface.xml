<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User_Interface"
    android:orientation="vertical">

    <TextView
        android:id="@+id/firebasename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:text="PasaBike"
        android:textColor="#2196F3"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="200dp"
        android:text="PasaBiker"
        android:backgroundTint="#FFEB3B"
        android:background="@drawable/customable_bttns"
        android:textSize="20dp"
        android:id="@+id/PasaBiker"
        android:textAllCaps="false"
        android:textColor="#2196F3"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Pasabike Tutorial"
        android:backgroundTint="#FFEB3B"
        android:background="@drawable/customable_bttns"
        android:textSize="18dp"
        android:id="@+id/PasaBuyer"
        android:textAllCaps="false"
        android:textColor="#2196F3"/>


</LinearLayout>